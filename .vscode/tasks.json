{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "projName",
            "type": "promptString",
            "description": "Project name"
        },
        {
            "id": "modName",
            "type": "promptString",
            "description": "Module/Testbench name"
        }
    ],
    "tasks": [
        {
            "label": "New Project",
            "type": "shell",
            "command": "make new-proj NAME=${input:projName}",
            "problemMatcher": []
        },
        {
            "label": "New Module",
            "type": "shell",
            "command": "./scripts/new_module.sh module ${input:modName} ${input:projName}",
            "problemMatcher": []
        },
        {
            "label": "New Testbench",
            "type": "shell",
            "command": "./scripts/new_module.sh tb ${input:modName} ${input:projName}",
            "problemMatcher": []
        },
        {
            "label": "Build & Simulate",
            "type": "shell",
            "command": "make sim",
            "options": {
                "cwd": "${workspaceFolder}/src/${input:projName}"
            },
            "problemMatcher": []
        },
        {
            "label": "Waveform Viewer",
            "type": "shell",
            "command": "make waves",
            "options": {
                "cwd": "${workspaceFolder}/src/${input:projName}"
            },
            "problemMatcher": []
        }
    ]
}